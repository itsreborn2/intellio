{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "env": ["NODE_OPTIONS"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "build"
      ]
    },
    "serve": {
      "dependsOn": [
        "serve:main",
        "serve:doceasy",
        "serve:stockeasy"
      ]
    },
    "serve:main": {
      "cache": false,
      "persistent": true
    },
    "serve:doceasy": {
      "cache": false,
      "persistent": true
    },
    "serve:stockeasy": {
      "cache": false,
      "persistent": true
    }
  }
}
